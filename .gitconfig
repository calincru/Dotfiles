[user]
    name = Calin Cruceru
    email = calin@rosedu.org

[url "git://anongit.kde.org/"]
    insteadOf = kde:
[url "git@git.kde.org:"]
    pushInsteadOf = kde:

[url "git@github.com:crucerucalin/"]
    insteadOf = mines:
    pushInsteadOf = mines:

[alias]
    up = pull --rebase -v --stat
    ci = commit -a -v

[core]
    editor = vim
    excludesfile = /home/calin/.gitignore

[push]
    default = tracking

[color]
    diff = auto
    status = auto
    branch = auto
    interactive = auto
    ui = auto

[color "branch"]
    current = green bold
    local = green
    remote = red bold

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red

[color "sh"]
    branch = yellow
